extend layout

block content
    .container
        form(method='post', action='contact/send')
            h1 Contact Me
            .form-group
                label Name
                input.form-control(type='text', name='name', placeholder='Enter your name here')
            .form-group
                label Email
                input.form-control(type='email', name='email', placeholder='Enter email address here')
            .form-group
                label Message
                textarea.form-control(name='message', placeholder='Enter your message here')
            button.btn.btn-default(type='submit') Submit